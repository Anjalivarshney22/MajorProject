<%- layout("/layouts/boilerplate") %>

<body>

    <h1>All Listings</h1>

    <div class="row">
        <% for(let listing of alllistings) { %>
        <div class="col-md-4"> <!-- Column for responsive grid -->
            <div class="card" style="width: 18rem;">
                <!-- Move the anchor tag inside the card -->
                <a href="/listing/<%= listing._id %>" class="listing-link" style="text-decoration: none; color: inherit;">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="..." style="object-fit: cover; height: 200px;">
                    <div class="card-img-overlay"><i class="fa-solid fa-heart"></i></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b><br>
                            <hr>
                            <%= listing.description %><br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                        </p>
                    </div>
                </a>
            </div>
        </div>
        <% } %>
    </div>
</body>
